@model string

@*custom-file-input*@
<div class="form-group">
    <label asp-for="@Model" class="control-label"> </label>
    <div class="custom-file">
        <input asp-for="@Model" type="file" name="@Model" class="form-control" id="FLImageUrl"
               onchange="document.getElementById('ImagePrv').src = window.URL.createObjectURL(this.files[0])">
        <label class="custom-file-label" for="FLImageUrl">Choose file</label>
    </div>
    @Html.ValidationMessage(Model, new {id = "testId", @class = "text-danger"})
   @* <span asp-validation-for="@Model" class="text-danger"></span>*@
    <img id="ImagePrv" scr="~/images/noimage.png" alt="Logo Image" width="150"
         height="150" style="border:1px;margin-top:20px;margin-left:120px;" />
</div>