@model IEnumerable<HandicraftStore.Models.Product>

@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />



<div class="nav-container">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="product-tab" data-toggle="tab" href="#tab1" aria-controls="product" aria-selected="true">Handicraft List</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="supplier-tab" data-toggle="tab" href="#tab2" aria-controls="supplier" aria-selected="false">Cart Items</a>
        </li>
    </ul>
    <div id="tab1" class="tab-content p-3 border-right border-left">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-xs-6 boarder-primary mb-3">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-12">
                                <div class="card-header text-white bg-secondary">
                                    <p class="card-text">
                                        <h5 class="card-title">
                                            @item.Description
                                            <a class="text-white float-right"><i class="bi bi-penci-square"></i></a>
                                        </h5>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <img src="~/Images/@item.ImageUrl" style='width: 100px; height: 100px;' width="100%" id="ImageUrl" alt="">
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <p class="card-text" id="Desc">@item.Description</p>
                                    <p class="card-text">@item.Amount</p>
                                    @*<p class="card-text" id="ItemId">@item.Id</p>*@
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="card-footer">
                                    <p class="card-text">abc</p>
                                
                                    <input type="button" class="btn btn-sm btn-info" value="Add to Cart" id="AddCart" onclick="AddtoCart('@item.Id')" />
                                    <a asp-action="GotoCart" asp-controller="Orders" class="btn btn-sm btn-info">View Cart Items</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="tab2" class="tab-content">
        <div class="container">
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <h6>Items In Cart </h6>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <table id="CartItems" class="table table-bordered table-condensed table-striped">
                        <thead>
                            <tr>
                                <th style="display: none;"> </th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th></th>

                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>



        <br />
        <input type="button" value="Check Out" id="SaveCartItems" onclick="SaveCartItems();" />
        <br />

    </div>
</div>




